<!DOCTYPE html>
<html lang="en">
<head>
    <title>Katalog Bunga</title>
</head>
<body>
    <header>
        <h1>Katalog Bunga</h1>
        <nav>
            <% if (user) { %>
                <span>Selamat datang, <%= user.nama_pelanggan %></span>
            <% } else { %>
                <a href="/login">Login</a>
            <% } %>
        </nav>
    </header>
    <main>
        <ul>
            <% bunga.forEach(item => { %>
                <li>
                    <h2><%= item.nama_bunga %></h2>
                    <p><%= item.deskripsi %></p>
                    <p>Harga: Rp <%= item.harga %></p>
                </li>
            <% }); %>
        </ul>
    </main>
</body>
</html>
