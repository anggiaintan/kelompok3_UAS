<h1>Kelola Bunga</h1>
<form action="/admin/bunga" method="POST">
    <input type="text" name="nama" placeholder="Nama Bunga" required />
    <textarea name="deskripsi" placeholder="Deskripsi" required></textarea>
    <input type="number" name="harga" placeholder="Harga" required />
    <input type="number" name="stok" placeholder="Stok" required />
    <input type="text" name="gambar" placeholder="URL Gambar" required />
    <button type="submit">Tambah Bunga</button>
</form>
<ul>
    <% bunga.forEach(item => { %>
        <li>
            <h2><%= item.nama_bunga %></h2>
            <p><%= item.deskripsi %></p>
            <p>Harga: Rp <%= item.harga %></p>
            <form action="/admin/bunga/delete" method="POST">
                <input type="hidden" name="kd_bunga" value="<%= item.kd_bunga %>" />
                <button type="submit">Hapus</button>
            </form>
        </li>
    <% }); %>
</ul>
